    "release": "pnpm run lint && pnpm run test && pnpm run build && changeset publish"
  },
  "keywords": [],
  "author": "castrogarciajs",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "@types/node": "20.8.6",
    "rimraf": "5.0.5",
    "tsup": "7.2.0",
    "typescript": "5.2.2",
    "vitest": "0.34.6"
  }
}
