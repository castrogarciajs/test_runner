{
  "name": "@lab-pkg/test-runner",
  "version": "0.0.2",
  "description": "",
  "main": "./dist/main.js",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "scripts": {
    "dev": "vitest",
    "test": "vitest --run --globals",
